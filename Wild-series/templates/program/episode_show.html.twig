{% extends 'base.html.twig' %}

{% block body %}
<h1>{{ program.title }}</h1>
        <img src="{{ program.poster }}" width="150" alt="{{ program.title }}">
        <div>
            <p>
            <h6>
                Saison {{ season.number }} episode {{ episode.number }} :  {{ episode.title }}
            </h6>
                <br>
                Résumé :{{ episode.synopsis }}
            </p>
        </div>
      <a href='{{ path("program_seasonShow", { programId: program.id,  seasonId: season.id }) }}'>Voir la saison</a>
{% endblock %}